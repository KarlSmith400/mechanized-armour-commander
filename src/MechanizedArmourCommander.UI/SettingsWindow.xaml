<Window x:Class="MechanizedArmourCommander.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mechanized Armour Commander - Settings" Height="400" Width="500"
        Background="#0D0D0D"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="SETTINGS"
                   FontSize="20" FontWeight="Bold"
                   Foreground="#00FF00" FontFamily="Consolas"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1"
                   Text="Settings will be available in a future update."
                   FontSize="12" Foreground="#006600" FontFamily="Consolas"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Grid.Row="2" Content="BACK" Click="Back_Click"
                Style="{x:Null}" Width="120" Height="36"
                FontFamily="Consolas" FontSize="12" FontWeight="Bold"
                Background="#003300" Foreground="#00FF00"
                BorderBrush="#006600" BorderThickness="1"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"/>
    </Grid>
</Window>
