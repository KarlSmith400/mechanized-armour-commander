<Window x:Class="MechanizedArmourCommander.UI.PostCombatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mechanized Armour Commander - Mission Report" Height="650" Width="700"
        Background="#0D0D0D"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="OutcomeHeader" Grid.Row="0"
                   FontSize="22" FontWeight="Bold"
                   FontFamily="Consolas"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Report Content -->
        <Border Grid.Row="1" BorderBrush="#004400" BorderThickness="1"
                Background="#050505">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ReportPanel" Margin="12"/>
            </ScrollViewer>
        </Border>

        <!-- Continue Button -->
        <Button x:Name="ContinueButton" Grid.Row="2"
                Content="CONTINUE" Click="Continue_Click"
                Style="{x:Null}"
                Width="180" Height="40"
                FontFamily="Consolas" FontSize="14" FontWeight="Bold"
                Background="#003300" Foreground="#00FF00"
                BorderBrush="#006600" BorderThickness="1"
                Margin="0,10,0,0"/>
    </Grid>
</Window>
