<Window x:Class="MechanizedArmourCommander.UI.TacticalDecisionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TACTICAL DECISION - ROUND"
        Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#FF0A0A0A"
        Foreground="#FF00FF00"
        FontFamily="Consolas"
        FontSize="12"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="TerminalButton" TargetType="Button">
            <Setter Property="Background" Value="#FF001100"/>
            <Setter Property="Foreground" Value="#FF00FF00"/>
            <Setter Property="BorderBrush" Value="#FF00FF00"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF003300"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" BorderBrush="#FF00FF00" BorderThickness="0,0,0,2" Padding="0,0,0,10">
            <StackPanel>
                <TextBlock Text="═══════════════════════════════════════════════════════════════════════════"
                           Foreground="#FF00FF00" FontSize="10" HorizontalAlignment="Center"/>
                <TextBlock x:Name="RoundNumberText"
                           Text="ROUND X - TACTICAL DECISION REQUIRED"
                           Foreground="#FF00FF00"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,5"/>
                <TextBlock Text="═══════════════════════════════════════════════════════════════════════════"
                           Foreground="#FF00FF00" FontSize="10" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Situation Report -->
            <Border Grid.Column="0" BorderBrush="#FF00FF00" BorderThickness="1" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="SITUATION REPORT"
                                   Foreground="#FF00FF00"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="SituationReportText"
                                   TextWrapping="Wrap"
                                   Foreground="#FF00FF00"
                                   FontSize="11"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel: Action Planner -->
            <Border Grid.Column="2" BorderBrush="#FF00FF00" BorderThickness="1" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ACTION PLANNER"
                               Foreground="#FF00FF00"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,0,5"/>

                    <!-- Frame selector tabs -->
                    <StackPanel Grid.Row="1" x:Name="FrameTabsPanel" Orientation="Horizontal" Margin="0,0,0,10"/>

                    <!-- Per-frame action panel -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ActionPlannerPanel">
                            <TextBlock Text="Select a frame above to plan actions"
                                       Foreground="#FF00AA00" FontSize="11"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Global options -->
                    <StackPanel Grid.Row="3" Margin="0,10,0,0">
                        <Border BorderBrush="#FF006600" BorderThickness="0,1,0,0" Padding="0,5,0,0">
                            <StackPanel>
                                <CheckBox x:Name="AttemptWithdrawalCheckBox"
                                          Content="Attempt Tactical Withdrawal"
                                          Foreground="#FFFF8800"
                                          FontWeight="Bold"
                                          Margin="0,5,0,5"/>
                                <CheckBox x:Name="AutoRemainingCheckBox"
                                          Content="Auto-resolve remaining rounds"
                                          Foreground="#FF00AA00"
                                          Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Panel: Actions -->
        <Border Grid.Row="2" BorderBrush="#FF00FF00" BorderThickness="0,2,0,0" Padding="0,10,0,0" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           x:Name="StatusBarText"
                           Text="Plan actions for each frame, then execute"
                           Foreground="#FF00AA00"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="EXECUTE ORDERS"
                        Style="{StaticResource TerminalButton}"
                        Width="150"
                        Click="ExecuteButton_Click"
                        FontSize="12"
                        FontWeight="Bold"/>

                <Button Grid.Column="3"
                        Content="AUTO (AI DECIDES)"
                        Style="{StaticResource TerminalButton}"
                        Width="150"
                        Click="AutoButton_Click"
                        FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>
