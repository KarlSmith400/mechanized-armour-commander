<Window x:Class="MechanizedArmourCommander.UI.TacticalDecisionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TACTICAL DECISION - ROUND"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FF0A0A0A"
        Foreground="#FF00FF00"
        FontFamily="Consolas"
        FontSize="12"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="TerminalButton" TargetType="Button">
            <Setter Property="Background" Value="#FF001100"/>
            <Setter Property="Foreground" Value="#FF00FF00"/>
            <Setter Property="BorderBrush" Value="#FF00FF00"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF003300"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" BorderBrush="#FF00FF00" BorderThickness="0,0,0,2" Padding="0,0,0,10">
            <StackPanel>
                <TextBlock Text="═══════════════════════════════════════════════════════"
                           Foreground="#FF00FF00" FontSize="10" HorizontalAlignment="Center"/>
                <TextBlock x:Name="RoundNumberText"
                           Text="ROUND X - TACTICAL DECISION REQUIRED"
                           Foreground="#FF00FF00"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,5"/>
                <TextBlock Text="═══════════════════════════════════════════════════════"
                           Foreground="#FF00FF00" FontSize="10" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Situation Report -->
            <Border Grid.Column="0" BorderBrush="#FF00FF00" BorderThickness="1" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="SITUATION REPORT"
                                   Foreground="#FF00FF00"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="SituationReportText"
                                   TextWrapping="Wrap"
                                   Foreground="#FF00FF00"
                                   FontSize="11"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel: Tactical Options -->
            <Border Grid.Column="2" BorderBrush="#FF00FF00" BorderThickness="1" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="TACTICAL OPTIONS"
                                   Foreground="#FF00FF00"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,10"/>

                        <!-- Stance Override -->
                        <TextBlock Text="Global Stance Override:"
                                   Foreground="#FF00AA00"
                                   Margin="0,5,0,2"/>
                        <ComboBox x:Name="StanceComboBox"
                                  Background="#FF001100"
                                  Foreground="#FF00FF00"
                                  BorderBrush="#FF00FF00"
                                  Margin="0,0,0,10">
                            <ComboBoxItem Content="(No Override)" IsSelected="True"/>
                            <ComboBoxItem Content="Aggressive"/>
                            <ComboBoxItem Content="Balanced"/>
                            <ComboBoxItem Content="Defensive"/>
                        </ComboBox>

                        <!-- Target Priority Override -->
                        <TextBlock Text="Target Priority Override:"
                                   Foreground="#FF00AA00"
                                   Margin="0,5,0,2"/>
                        <ComboBox x:Name="TargetPriorityComboBox"
                                  Background="#FF001100"
                                  Foreground="#FF00FF00"
                                  BorderBrush="#FF00FF00"
                                  Margin="0,0,0,10">
                            <ComboBoxItem Content="(No Override)" IsSelected="True"/>
                            <ComboBoxItem Content="Focus Fire"/>
                            <ComboBoxItem Content="Spread Damage"/>
                            <ComboBoxItem Content="Threat Priority"/>
                            <ComboBoxItem Content="Opportunity"/>
                        </ComboBox>

                        <!-- Focus Target -->
                        <TextBlock Text="Focus All Fire On:"
                                   Foreground="#FF00AA00"
                                   Margin="0,10,0,2"/>
                        <ComboBox x:Name="FocusTargetComboBox"
                                  Background="#FF001100"
                                  Foreground="#FF00FF00"
                                  BorderBrush="#FF00FF00"
                                  Margin="0,0,0,10">
                            <ComboBoxItem Content="(None)" IsSelected="True"/>
                        </ComboBox>

                        <!-- Withdrawal -->
                        <CheckBox x:Name="AttemptWithdrawalCheckBox"
                                  Content="Attempt Tactical Withdrawal"
                                  Foreground="#FFFF8800"
                                  FontWeight="Bold"
                                  Margin="0,10,0,5"/>
                        <TextBlock Text="⚠ Will attempt to disengage from combat"
                                   Foreground="#FFAA6600"
                                   FontSize="10"
                                   Margin="20,0,0,10"/>

                        <!-- Auto for remaining rounds -->
                        <CheckBox x:Name="AutoRemainingCheckBox"
                                  Content="Auto-resolve remaining rounds"
                                  Foreground="#FF00AA00"
                                  Margin="0,10,0,5"/>
                        <TextBlock Text="AI will handle all future decisions"
                                   Foreground="#FF008800"
                                   FontSize="10"
                                   Margin="20,0,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom Panel: Actions -->
        <Border Grid.Row="2" BorderBrush="#FF00FF00" BorderThickness="0,2,0,0" Padding="0,10,0,0" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Choose your tactical response for this round"
                           Foreground="#FF00AA00"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="EXECUTE ORDERS"
                        Style="{StaticResource TerminalButton}"
                        Width="150"
                        Click="ExecuteButton_Click"
                        FontSize="12"
                        FontWeight="Bold"/>

                <Button Grid.Column="3"
                        Content="AUTO (AI DECIDES)"
                        Style="{StaticResource TerminalButton}"
                        Width="150"
                        Click="AutoButton_Click"
                        FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>
