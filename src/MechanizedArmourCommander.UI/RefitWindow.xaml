<Window x:Class="MechanizedArmourCommander.UI.RefitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="REFIT BAY" Height="750" Width="1100"
        Background="#0D0D0D"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <Grid>
                <TextBlock x:Name="FrameHeaderText"
                           Text="REFIT BAY"
                           FontSize="14" FontWeight="Bold"
                           Foreground="#00FF00"
                           FontFamily="Consolas"
                           HorizontalAlignment="Left"/>
                <TextBlock x:Name="HardpointSummaryText"
                           FontSize="10"
                           Foreground="#00AA00"
                           FontFamily="Consolas"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
            </Grid>
            <TextBlock x:Name="ReactorBudgetText"
                       FontSize="10"
                       Foreground="#00CCFF"
                       FontFamily="Consolas"
                       Margin="0,2,0,0"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Main Content: Mech Diagram + Inventory -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Mech Diagram -->
            <Border Grid.Column="0"
                    BorderBrush="#004400"
                    BorderThickness="1"
                    Background="#050505">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="FRAME CONFIGURATION"
                               FontSize="10" FontWeight="Bold"
                               Foreground="#006600"
                               FontFamily="Consolas"
                               Margin="6,4,6,4"/>

                    <Canvas x:Name="MechCanvas" Grid.Row="1"
                            Background="#0A0A0A"
                            Margin="6"
                            MouseLeftButtonDown="MechCanvas_MouseLeftButtonDown"
                            SizeChanged="MechCanvas_SizeChanged"/>
                </Grid>
            </Border>

            <!-- Right: Equipped + Inventory -->
            <Border Grid.Column="2"
                    BorderBrush="#004400"
                    BorderThickness="1"
                    Background="#050505">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="InventoryPanel" Margin="6"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom: Cost Display + Buttons -->
        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="CostDisplayText" Grid.Column="0"
                       Text="Changes: 0 | Cost: 0 Credits | Time: 0 days"
                       FontSize="11" FontWeight="Bold"
                       Foreground="#FFAA00"
                       FontFamily="Consolas"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="RESET"
                        Click="ResetButton_Click"
                        Style="{x:Null}"
                        Width="100" Height="36"
                        FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                        Background="#332200" Foreground="#FFAA00"
                        BorderBrush="#664400" BorderThickness="1"
                        Margin="0,0,8,0"/>
                <Button x:Name="ConfirmButton"
                        Content="CONFIRM REFIT"
                        Click="ConfirmButton_Click"
                        Style="{x:Null}"
                        Width="150" Height="36"
                        FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                        Background="#003300" Foreground="#00FF00"
                        BorderBrush="#006600" BorderThickness="1"
                        Margin="0,0,8,0"/>
                <Button Content="CANCEL"
                        Click="CancelButton_Click"
                        Style="{x:Null}"
                        Width="100" Height="36"
                        FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                        Background="#330000" Foreground="#FF6600"
                        BorderBrush="#662200" BorderThickness="1"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
