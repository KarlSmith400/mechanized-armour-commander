<Window x:Class="MechanizedArmourCommander.UI.FrameSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FRAME SELECTOR - MECHANIZED ARMOUR COMMANDER"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FF0A0A0A"
        Foreground="#FF00FF00"
        FontFamily="Consolas"
        FontSize="12">

    <Window.Resources>
        <!-- Terminal Style Button -->
        <Style x:Key="TerminalButton" TargetType="Button">
            <Setter Property="Background" Value="#FF001100"/>
            <Setter Property="Foreground" Value="#FF00FF00"/>
            <Setter Property="BorderBrush" Value="#FF00FF00"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF003300"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Terminal Style ListBox -->
        <Style x:Key="TerminalListBox" TargetType="ListBox">
            <Setter Property="Background" Value="#FF001100"/>
            <Setter Property="Foreground" Value="#FF00FF00"/>
            <Setter Property="BorderBrush" Value="#FF00FF00"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- ListBox Item Style -->
        <Style x:Key="TerminalListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF00FF00"/>
            <Setter Property="Padding" Value="5,2"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF003300"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF002200"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Terminal Style TextBlock -->
        <Style x:Key="TerminalHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF00FF00"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" BorderBrush="#FF00FF00" BorderThickness="0,0,0,2" Padding="0,0,0,10">
            <StackPanel>
                <TextBlock Text="═══════════════════════════════════════════════════════════════"
                           Foreground="#FF00FF00" FontSize="10"/>
                <TextBlock Text="FRAME CONFIGURATION SYSTEM"
                           Style="{StaticResource TerminalHeader}"
                           FontSize="18"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="═══════════════════════════════════════════════════════════════"
                           Foreground="#FF00FF00" FontSize="10"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Chassis List -->
            <Border Grid.Column="0" BorderBrush="#FF00FF00" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="AVAILABLE CHASSIS" Style="{StaticResource TerminalHeader}"/>

                    <!-- Class Filter -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,5">
                        <TextBlock Text="Filter by Class:" FontSize="10" Margin="0,0,0,2"/>
                        <ComboBox x:Name="ClassFilterComboBox"
                                  SelectionChanged="ClassFilterComboBox_SelectionChanged"
                                  Background="#FF001100"
                                  Foreground="#FF00FF00"
                                  BorderBrush="#FF00FF00">
                            <ComboBoxItem Content="All Classes" IsSelected="True"/>
                            <ComboBoxItem Content="Light"/>
                            <ComboBoxItem Content="Medium"/>
                            <ComboBoxItem Content="Heavy"/>
                            <ComboBoxItem Content="Assault"/>
                        </ComboBox>
                    </StackPanel>

                    <ListBox x:Name="ChassisListBox"
                             Grid.Row="2"
                             Style="{StaticResource TerminalListBox}"
                             ItemContainerStyle="{StaticResource TerminalListBoxItem}"
                             SelectionChanged="ChassisListBox_SelectionChanged"/>
                </Grid>
            </Border>

            <!-- Center Panel: Chassis Details -->
            <Border Grid.Column="2" BorderBrush="#FF00FF00" BorderThickness="1" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ChassisDetailsPanel">
                        <TextBlock Text="CHASSIS SPECIFICATIONS" Style="{StaticResource TerminalHeader}"/>
                        <TextBlock x:Name="ChassisDetailsText"
                                   TextWrapping="Wrap"
                                   Foreground="#FF00FF00"
                                   Text="Select a chassis from the list to view details"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel: Weapon Selection -->
            <Border Grid.Column="4" BorderBrush="#FF00FF00" BorderThickness="1" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="LOADOUT CONFIGURATION" Style="{StaticResource TerminalHeader}"/>

                    <StackPanel Grid.Row="1" x:Name="LoadoutPanel" Margin="0,0,0,10">
                        <TextBlock Text="Configure loadout after selecting chassis"
                                   FontSize="10"
                                   Foreground="#FF00AA00"/>
                    </StackPanel>

                    <TextBlock Grid.Row="2" Text="AVAILABLE WEAPONS" Style="{StaticResource TerminalHeader}" Margin="0,10,0,5"/>

                    <ListBox x:Name="WeaponsListBox"
                             Grid.Row="3"
                             Style="{StaticResource TerminalListBox}"
                             ItemContainerStyle="{StaticResource TerminalListBoxItem}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Panel: Actions -->
        <Border Grid.Row="2" BorderBrush="#FF00FF00" BorderThickness="0,2,0,0" Padding="0,10,0,0" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Selected Frame: " Foreground="#FF00AA00"/>
                    <TextBlock x:Name="SelectedFrameText" Text="None" Foreground="#FF00FF00" FontWeight="Bold"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="CONFIRM SELECTION"
                        Style="{StaticResource TerminalButton}"
                        Width="180"
                        Click="ConfirmButton_Click"
                        x:Name="ConfirmButton"
                        IsEnabled="False"/>

                <Button Grid.Column="3"
                        Content="CANCEL"
                        Style="{StaticResource TerminalButton}"
                        Width="120"
                        Click="CancelButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
