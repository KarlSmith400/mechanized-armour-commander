<Window x:Class="MechanizedArmourCommander.UI.ManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mechanized Armour Commander - Company HQ" Height="800" Width="1100"
        Background="#0D0D0D"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="COMPANY HEADQUARTERS"
                   FontSize="20" FontWeight="Bold"
                   Foreground="#00FF00" FontFamily="Consolas"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,4"/>

        <!-- Status Bar -->
        <Border Grid.Row="1" BorderBrush="#004400" BorderThickness="1"
                Background="#050505" Padding="8,4" Margin="0,0,0,6">
            <WrapPanel HorizontalAlignment="Center">
                <TextBlock x:Name="CompanyNameText" FontSize="12" FontWeight="Bold"
                           Foreground="#00FF00" FontFamily="Consolas" Margin="0,0,20,0"/>
                <TextBlock x:Name="DayText" FontSize="12"
                           Foreground="#00AA00" FontFamily="Consolas" Margin="0,0,20,0"/>
                <TextBlock x:Name="CreditsText" FontSize="12" FontWeight="Bold"
                           Foreground="#FFAA00" FontFamily="Consolas" Margin="0,0,20,0"/>
                <TextBlock x:Name="ReputationText" FontSize="12"
                           Foreground="#00AAFF" FontFamily="Consolas" Margin="0,0,20,0"/>
                <TextBlock x:Name="MissionsText" FontSize="12"
                           Foreground="#888888" FontFamily="Consolas" Margin="0,0,20,0"/>
                <TextBlock x:Name="FactionStandingText" FontSize="10"
                           Foreground="#888888" FontFamily="Consolas"/>
            </WrapPanel>
        </Border>

        <!-- Main Content: nav + content area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation -->
            <Border Grid.Column="0" BorderBrush="#004400" BorderThickness="1"
                    Margin="0,0,6,0">
                <StackPanel Margin="6">
                    <TextBlock Text="NAVIGATION" FontSize="10" FontWeight="Bold"
                               Foreground="#006600" FontFamily="Consolas"
                               Margin="0,0,0,8"/>
                    <Button x:Name="NavRoster" Content="ROSTER"
                            Click="NavButton_Click" Tag="Roster"
                            Style="{x:Null}"
                            Height="32" Margin="0,0,0,4"
                            FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                            Background="#003300" Foreground="#00FF00"
                            BorderBrush="#006600" BorderThickness="1"/>
                    <Button x:Name="NavPilots" Content="PILOTS"
                            Click="NavButton_Click" Tag="Pilots"
                            Style="{x:Null}"
                            Height="32" Margin="0,0,0,4"
                            FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                            Background="#001A00" Foreground="#00CC00"
                            BorderBrush="#004400" BorderThickness="1"/>
                    <Button x:Name="NavMarket" Content="MARKET"
                            Click="NavButton_Click" Tag="Market"
                            Style="{x:Null}"
                            Height="32" Margin="0,0,0,4"
                            FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                            Background="#001A00" Foreground="#00CC00"
                            BorderBrush="#004400" BorderThickness="1"/>
                    <Button x:Name="NavInventory" Content="INVENTORY"
                            Click="NavButton_Click" Tag="Inventory"
                            Style="{x:Null}"
                            Height="32" Margin="0,0,0,4"
                            FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                            Background="#001A00" Foreground="#00CC00"
                            BorderBrush="#004400" BorderThickness="1"/>
                    <Button x:Name="NavRefit" Content="REFIT"
                            Click="NavButton_Click" Tag="Refit"
                            Style="{x:Null}"
                            Height="32" Margin="0,0,0,4"
                            FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                            Background="#001A00" Foreground="#00CC00"
                            BorderBrush="#004400" BorderThickness="1"/>
                    <Button x:Name="NavMissions" Content="MISSIONS"
                            Click="NavButton_Click" Tag="Missions"
                            Style="{x:Null}"
                            Height="32" Margin="0,0,0,4"
                            FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                            Background="#001A00" Foreground="#00CC00"
                            BorderBrush="#004400" BorderThickness="1"/>
                    <Button x:Name="NavDeploy" Content="DEPLOY"
                            Click="NavButton_Click" Tag="Deploy"
                            Style="{x:Null}"
                            Height="32" Margin="0,0,0,4"
                            FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                            Background="#1A1A00" Foreground="#FFAA00"
                            BorderBrush="#444400" BorderThickness="1"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" BorderBrush="#004400" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ContentPanel" Margin="10"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom Controls -->
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,6,0,0">
            <Button x:Name="AdvanceDayButton" Content="ADVANCE DAY"
                    Click="AdvanceDay_Click"
                    Style="{x:Null}"
                    Width="140" Height="36"
                    FontFamily="Consolas" FontSize="12" FontWeight="Bold"
                    Background="#001133" Foreground="#4488FF"
                    BorderBrush="#003388" BorderThickness="1"
                    Margin="4"/>
            <Button x:Name="QuickCombatButton" Content="QUICK COMBAT"
                    Click="QuickCombat_Click"
                    Style="{x:Null}"
                    Width="140" Height="36"
                    FontFamily="Consolas" FontSize="12" FontWeight="Bold"
                    Background="#332200" Foreground="#FFAA00"
                    BorderBrush="#664400" BorderThickness="1"
                    Margin="4"/>
            <Button x:Name="SaveExitButton" Content="SAVE &amp; EXIT"
                    Click="SaveAndExit_Click"
                    Style="{x:Null}"
                    Width="140" Height="36"
                    FontFamily="Consolas" FontSize="12" FontWeight="Bold"
                    Background="#330000" Foreground="#FF6600"
                    BorderBrush="#662200" BorderThickness="1"
                    Margin="4"/>
        </StackPanel>
    </Grid>
</Window>
